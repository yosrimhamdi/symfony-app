{% extends 'base.html.twig' %}
{% block body %}
  <h1>Creation d'un article</h1>
  {{ form_start(formArticle) }}
  {{form_widget(formArticle.name, { 'attr': { 'placeholder': 'name' } })}}
  {{form_widget(formArticle.description, { 'attr': { 'placeholder': 'description' }}) }}
  {{form_widget(formArticle.imageURL, { 'attr': { 'placeholder': 'image' }})}}
  <button type="submit">
    {% if isEditMode %}
      Edit article
    {% else %}
      Create new article
    {% endif %}
  </button>
  {{ form_end(formArticle) }}
{% endblock %}
